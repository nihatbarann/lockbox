# =============================================
# LOCKBOX SERVER - Environment Configuration
# =============================================
# Copy this file to .env and modify as needed
# CRITICAL: Set all required environment variables
# =============================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Security - CRITICAL: Change this in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
JWT_EXPIRES_IN=24h

# Database
DB_PATH=./data/lockbox.db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL for CORS (production)
FRONTEND_URL=https://yourapp.com

# Logging
LOG_LEVEL=info
